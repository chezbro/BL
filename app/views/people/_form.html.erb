<%= form_for(@person) do |f| %>
  <div>
    <% if @person.errors.any? %>
    <ul style="list-style:none">
      <% @person.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    </ul>
    <% end %>
  </div>
  <% end %>

  <div>
    <%= f.text_field :full_name, label: "full_name", placeholder: "Please enter a full name" %>
  </div> <br>

  <div>
    <%= f.text_field :survived_by, label: "survived_by", placeholder: "Survived by" %>
  </div><br>

  <div>
    <%= f.text_field :dob, label: "dob", placeholder: "Date of Birth"  %><br />
  </div>

  <div>
    <%= f.text_field :dod, label: "dod", placeholder: "Date of Passing" %>
  </div>

  <div>
    <%= f.text_area :eulogy, label: "eulogy", placeholder: "Write a Eulogy" %>
  </div>

  <div>
    <%= f.text_field :photo_url, label: "photo_url", placeholder: "Upload an image" %>
  </div>

  <div>
    <%= f.text_field :charity, label: "charity", placeholder: "Associated Charities & Organizations" %>
  </div>

  <div>
    <%= f.submit  %>
  </div>
<% end %>
