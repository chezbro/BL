<h1>New Person</h1>


<%= form_tag(people_url, method: 'post') do %>


  <div>
    <%= label_tag :dob %><br />
    <%=  text_field_tag :dob  %>
  </div>

    <div>
    <%= label_tag :dod %><br />
    <%= text_field_tag :dod %>
  </div>

    <div>
    <%= label_tag :eulogy %><br />
    <%= text_area_tag :eulogy %>
  </div>

    <div>
    <%= label_tag :photo_url %><br />
    <%= text_field_tag :photo_url %>
  </div>

    <div>
    <%= label_tag :charity %><br />
    <%= text_field_tag :charity %>
  </div>


  <div>
    <%= submit_tag "Create Person" %>
  </div>
<% end %>
