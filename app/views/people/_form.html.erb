<%= form_for(@person) do |f| %>
  <div>
    <% if @person.errors.any? %>
    <ul style="list-style:none">
      <% @person.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    </ul>
    <% end %>
  </div>
  <% end %>
  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>
  <div>
    <%= f.label :dob %><br />
    <%= f.text_field :dob  %>
  </div>
  <div>
    <%= f.label :dod %><br />
    <%= f.text_field :dod %>
  </div>

  <div>
    <%= f.label :eulogy %><br />
    <%= f.text_area :eulogy %>
  </div>

  <div>
    <%= f.label :photo_url %><br />
    <%= f.text_field :photo_url %>
  </div>

  <div>
    <%= f.label :charity %><br />
    <%= f.text_field :charity %>
  </div>

  <div>
    <%= f.submit  %>
  </div>
<% end %>
