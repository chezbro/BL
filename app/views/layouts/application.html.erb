<!DOCTYPE html>
<html>
<head>
  <title style=>BeyondLife</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
 <link href='http://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
 <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
 <link href='http://fonts.googleapis.com/css?family=Playfair+Display:400,700,700italic' rel='stylesheet' type='text/css'>
</head>
	<body>
		<nav class="application">
			<%= link_to(image_tag("/assets/BL.png", id: "bl-logo"), root_url)  %>
				<ul class="navlinks">
					<% if signed_in? %>
					<li><%= link_to "Commemorate +", people_url %></li>
					<li><%= link_to "Our Mission", mission_url %></li>
					<li><%= link_to current_user.full_name.capitalize, user_url(current_user.id) %></li>
					<li><%= link_to "Sign Out", signout_url, method: 'delete' %></li>
					<% else %>
					<li><%= link_to "Sign In with Facebook", "/auth/facebook" %></li>
					<li><%= link_to "Commemorate +", people_url %></li>
					<li><%= link_to "Our Mission", mission_url %></li>
					<% end %>
				</ul>
		</nav>
		<%= yield %>
	</body>
</html>




